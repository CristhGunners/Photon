@import '../base/base'

section.upload
    width 100%
    
    h2
        color lead
        text-align center
    
    figure.preview
        width 70%
        margin 1em auto
        padding 0
        border 0

        img
            width 100%
            display none
            border 0
    
    form
        width 270px
        margin 1em auto
        padding 0
        text-align center
        
        ul.errorlist
            padding 0
            margin 1em auto
            list-style none
            
            li
                color google
                text-align center
                padding 0
                margin 0
        
        label
        span
            display block
            color lead
            font-size 1em
            text-align left
        
        input[type="text"]
            width 100%
            margin 0.25em auto
            border 0
            border-bottom 1px solid clearlead
            color gray
            font-size 1.25em
        
        button
            background green
            padding 0.25em 0.5em
            font-size 1.25em
            color white
            border 0
            margin 0.5em auto
            display block
        
        input[type="file"]
          display none
        
        button#upload_button
          color rgba(255, 255, 255, 0.85)
          margin 0.5em auto
          letter-spacing 2px
          font-size 1em
          background gray
          border none
          border-radius 5px
          padding 5px 25px
          cursor pointer

            &:hover
                background #444
        
            &:active
                background #111
        
            &:focus
                outline none
        