section.grid-tags
    width 100%
    min-width 290px
    margin 0
    padding 0
    
    ul
        margin 1em 0
        padding 0
        
        li
            display block
            vertical-align middle
            margin 0.5em
            padding 0.5em
            background #E7E7E7
            color lead
            font-size 1.25em
            
            a
                text-decoration none
                color lead
                
                span
                    float right