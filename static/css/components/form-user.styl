form
    display block
    margin 2em auto
    width 25%
    min-width 280px

    fieldset
        display block
        padding 0
        margin 0.75em auto
        border 0

        input
            border 0
            border-bottom 1px solid clearlead
            font-size 1.25em
            color lead
            width 100%
        a
        button
            background green
            padding 0.25em 0.75em
            border 0
            color white
            font-size 1.25em
            margin 0.5em auto
            display block
        
        a
            text-decoration none
            width 30%
            text-align center


        p
            color lead
            font-size 1.25em
            text-align justify