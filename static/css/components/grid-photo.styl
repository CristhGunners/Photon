section.grid-photo
    width 100%
    min-width 290px
    margin 0
    padding 0
    position relative
    z-index 1
    column-width 100%
    display table

    div.photo
        width 50%
        height 400px
        min-width 300px
        background-color lead
        padding 0em
        float left
        margin 0em
        position relative
        
        &.full
            width 100%
        
        span
            vertical-align top
        
        div.background
            background-size cover
            background-position center center
            background-repeat no-repeat
            box-shadow inset 13px -200px 203px 4113px rgba(0,0,0,0.25)
            position absolute
            width 100%
            height 100%
            top 0
            left 0
            right 0
            bottom 0
        
        div.user-info
            position absolute
            top 0.5em
            left 0.5em
        
            figure.user
                width 30px
                border-radius 50%
                padding 0
                margin 0.5em
                display inline-block
                vertical-align middle
                
                img
                    display block
                    width 100%
                    border-radius 50%
            
            h2
                font-size 1em
                color white
                display inline-block
                vertical-align middle
                
                a
                    color white
                    text-decoration none
        
        div.photo-info
            position absolute
            bottom 0.5em
            left 0.5em
            width 100%
            
            time
                color white
                margin 0.5em
        
        a.download
            color white
            background green
            border-radius 5px
            padding 0.5em
            text-decoration none
            position absolute
            right 0.5em
            bottom 0.5em


@media screen and (max-width: 720px)

    body
        section.content
                section.grid-photo
                    div.photo
                        width 100%
                        height 300px
                        
                        a.download
                            right 1em
                