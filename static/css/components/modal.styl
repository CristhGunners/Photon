div.modal
	width 50%
	background white
	min-width 270px
	padding 0
	z-index 9999
	position relative
	text-align center!important
	display none
	
	&.full
		width 80%
		height 80%
		overflow auto
	
	button.close
		position absolute
		top 5px
		right 0px
		color clearlead
		text-decoration none
		font-size 0.75em
		border 0
		background transparent
		color gray
			
	h3
		display block
		text-align center
		color gray
		font-size 1.75em
		margin 0.5em auto
	
	div
		figure
			display inline-block
			vertical-align middle
			width 22.5%
			padding 0
			margin 0.5em
			min-width 100px
			
			img
				display block
				width 100%

		p
			display inline-block
			vertical-align middle
			margin 1.2em
			font-size 1.25em
			color gray
			text-align center

			span
				display inline-block
				vertical-align middle
				margin 0 0.5em
				
				&.icon-facebook
					color facebook
				
				&.icon-twitter
					color twitter
				
				&.icon-google
					color google
				
				&.icon-instagram
					color instagram
			
			input
				border 0
				border-bottom 1px solid clearlead
				padding-bottom 0.3em
				width 90%
				
				&.full
					width 100%
	
	button.bot
		background green
		color white
		font-size 1.25em
		padding 0.2em 0.5em
		border 0
		margin 0.5em
		display inline-block
		vertical-align middle
		
		&.confirm
			background green
		
		&.out
			background google
		
		&.facebook
			background facebook
		
		&.twitter
			background twitter
		
		&.google
			background google
		
		&.delete
			background google