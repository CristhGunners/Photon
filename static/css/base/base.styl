@import 'nib/vendor'
@import '../lib/normalize'
@import 'variables'
@import 'fonts'

-vendor-prefixes = o ms moz webkit official

::scrollbar-track 
   background-color #333332

::scrollbar
   width 7px
   background-color #F5F5F5

::scrollbar-thumb
   background-color green

::-webkit-scrollbar-track 
   background-color #333332
   
::-webkit-scrollbar
   width 7px
   background-color #F5F5F5

::-webkit-scrollbar-thumb
   background-color green

::-o-scrollbar-track 
   background-color #333332
   
::-o-scrollbar
   width 7px
   background-color #F5F5F5

::-o-scrollbar-thumb
   background-color green

::-moz-scrollbar-track 
   background-color #333332
   
::-moz-scrollbar
   width 7px
   background-color #F5F5F5

::-moz-scrollbar-thumb
   background-color green

*
   outline none

body
	font-size 16px
	font-family fontOxygen
	font-weight 300
	overflow-x hidden
	overflow-y auto
	padding 0
	margin 0
	
	header
		background transparent
		margin 0
		padding 1em 0
		position absolute
		top 0
		width 100%
		min-width 300px
		z-index 9999
		color lead
		border-bottom 1px solid clearlead
		//box-shadow -19px 27px 133px -4px rgba(0,0,0,0.96)
		
		nav
			display inline-block
			vertical-align middle

			&.left
				float left
				margin-left 1em
			
			&.right
				float right
				margin-right 1em
								
			a
				color lead
				text-decoration none
				font-size 1.25em
				margin 0 0.5em
				transition all 0.5s

				&:hover
					opacity 0.5
				
				span
					vertical-align middle

	section.content
		margin 0
		padding 0
		width 100%
		position relative
		padding 3.55em 0 0
			
		div.empty
			text-align center
			color gray

			span
				font-size 2em
			
			h4
				font-size 1.25em
	
	footer
		background transparent
		padding 0
		margin 0 auto
		border-top 1px solid clearlead
		
		ul
			list-style none
			text-align center
			padding 0
			display block
			margin 0
			
			li
				font-size 1em
				display inline-block
				vertical-align middle
				margin 1em
				padding 0
				float right
				margin-right 2em
				color lead
				
				a
					color lead
					text-decoration none
			