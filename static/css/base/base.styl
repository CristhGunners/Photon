@import 'nib/vendor'
@import '../lib/normalize'
@import 'variables'
@import 'fonts'

-vendor-prefixes = o ms moz webkit official

::scrollbar-track 
   background-color #333332

::scrollbar
   width 7px
   background-color #F5F5F5

::scrollbar-thumb
   background-color green

::-webkit-scrollbar-track 
   background-color #333332
   
::-webkit-scrollbar
   width 7px
   background-color #F5F5F5

::-webkit-scrollbar-thumb
   background-color green

::-o-scrollbar-track 
   background-color #333332
   
::-o-scrollbar
   width 7px
   background-color #F5F5F5

::-o-scrollbar-thumb
   background-color green

::-moz-scrollbar-track 
   background-color #333332
   
::-moz-scrollbar
   width 7px
   background-color #F5F5F5

::-moz-scrollbar-thumb
   background-color green

*
   outline none

body
	font-size 16px
	font-family fontOxygen
	font-weight 300
	overflow-x hidden
	overflow-y auto
	padding 0
	margin 0
	
	header
		background #323232
		margin 0
		padding 1em 0
		position absolute
		top 0
		width 100%
		z-index 9999
		color white
		
		&.transparent
			background transparent
			
			a
				color white
		
		h1
			color white
			margin 0
			padding 0
			float left
			margin-left 1em
			font-size 1.25em
			
			a
				color white
				text-decoration none
		
		nav
			display inline-block
			vertical-align middle

			&.left
				float left
				margin-left 1em
			
			&.right
				float right
				margin-right 1em
								
			a
				color white
				text-decoration none
				font-size 1.25em
				
				&.logo
					color white
					padding 0.5em 0.65em
					font-weight 900
				
				span
					vertical-align middle

	section.content
		margin 0
		padding 0
		width 100%
		position relative
		padding 5em 0 2em
			
		div.empty
			text-align center
			color gray

			span
				font-size 2em
			
			h4
				font-size 1.25em
	
	footer
		background transparent
		padding 1em
		margin 0 auto
		
		ul
			list-style none
			text-align center
			padding 0
			display block
			
			li
				font-size 1em
				display inline-block
				vertical-align middle
				margin 0.5em
				
				a
					color gray
					text-decoration none
			